 <div class="form-group">
                                            <%= f.label :role, :class => "col-lg-2 control-label" %>
                                            <div class="col-lg-10">
                                                 <% #if current_user.is_admin? %>
           											 <%= f.select :role, User::ROLES, {:prompt => "Select Role"}%>
         										 <% #else %>
            										 <%#= @user.role.upcase %>
          										 <% #end %>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <%= f.label :first_name, :class => "col-lg-2 control-label" %>
                                            <div class="col-lg-10">
                                                <%= f.text_field :first_name, :autofocus => true, :class => "form-control" %>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <%= f.label :last_name, :class => "col-lg-2 control-label" %>
                                            <div class="col-lg-10">
                                                <%= f.text_field :last_name, :class => "form-control" %>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <%= f.label :email, :class => "col-lg-2 control-label" %>
                                            <div class="col-lg-10">
                                                <%= f.email_field :email, :class => "form-control" %>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <%= f.label :phone1, :class => "col-lg-2 control-label" %>
                                            <div class="col-lg-10">
                                                <%= f.telephone_field :phone1, :class => "form-control" %>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <%= f.label :phone2, :class => "col-lg-2 control-label" %>
                                            <div class="col-lg-10">
                                                <%= f.telephone_field :phone2, :class => "form-control" %>
                                            </div>
                                        </div>

                                        <%= f.submit "Save changes", :class => "btn btn-primary"%>
                                        <button type="reset" class="btn btn-default">Cancel</button>
